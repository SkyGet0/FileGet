<Window x:Class="Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Manager" Height="350" Width="500">
    <StackPanel>
        <GroupBox Header="Выбрать папку" Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="PathDisplay" Width="420" IsReadOnly="True" VerticalAlignment="Center"/>
                <Button x:Name="SelectFolder" Content="Обзор" Click="SelectFolder_Click" Margin="10,0,0,0" Padding="5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Управление сервером" Margin="0,5,0,0">
            <StackPanel Margin="0,5,0,0">
                <Button x:Name="BtnStart" Content="Запустить сервер" Height="40" Click="Start_Click" Background="LightGreen" FontSize="16"/>
                <Button x:Name="BtnStop" Content="Остановить сервер" Height="40" Click="Stop_Click" Background="LightCoral" Visibility="Collapsed"/>

                <TextBlock Text="Ссылка для QR-кода:" Margin="0,10,0,0" FontWeight="Bold"/>
                <TextBox x:Name="UrlDisplay" IsReadOnly="True" Background="#EEE" Foreground="Blue"/>
                <TextBlock x:Name="StatusText" Text="Статус: Остановлен" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>